# Start with CUDA 12.6 + Python 3.12
FROM nvidia/cuda:12.6.1-runtime-ubuntu24.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.12 \
    python3.12-venv \
    python3-pip \
    python3.12-dev \
    git \
    wget \
    curl \
    build-essential \
    libssl-dev \
    libffi-dev \
    libjpeg-dev \
    libpng-dev \
    && rm -rf /var/lib/apt/lists/*

# Create symbolic link for python3 -> python3.12
RUN ln -sf /usr/bin/python3.12 /usr/bin/python3

# Set working directory
WORKDIR /workspace

# Create and activate virtual environment
RUN python3.12 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip
RUN pip install --upgrade pip setuptools wheel

# Copy and install requirements
COPY requirements.in .
RUN pip install -r requirements.in

# Copy the rest of your code
COPY . .

# Set Python path
ENV PYTHONPATH="/workspace:$PYTHONPATH"

# Verify installation
RUN python -c "import torch; print(f'PyTorch version: {torch.__version__}'); print(f'CUDA available: {torch.cuda.is_available()}'); print(f'CUDA version: {torch.version.cuda}')"

# Set default command
#CMD ["python"]
#Default to bash for exploration
CMD ["/bin/bash"]
